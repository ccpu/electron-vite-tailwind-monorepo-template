{
  "name": "@internal/eslint-config",
  "type": "module",
  "version": "0.3.0",
  "private": true,
  "exports": {
    "./base": "./base.mjs",
    "./nextjs": "./nextjs.mjs",
    "./react": "./react.mjs"
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@pixpilot/antfu-eslint-config": "^4.0.3",
    "@pixpilot/eslint-config": "^2.7.3",
    "@pixpilot/eslint-config-next": "^0.0.24",
    "@pixpilot/eslint-config-react": "^0.4.6",
    "eslint-plugin-turbo": "^2.5.6",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript-eslint": "^8.40.0"
  },
  "devDependencies": {
    "@internal/prettier-config": "workspace:*",
    "@internal/tsconfig": "workspace:*",
    "eslint": "catalog:dev",
    "prettier": "catalog:dev",
    "typescript": "catalog:dev"
  },
  "prettier": "@internal/prettier-config"
}
