{
  "name": "@internal/vitest-config",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "exports": {
    ".": "./index.js",
    "./lib": "./lib.js",
    "./react": "./react.js"
  },
  "main": "./index.js",
  "types": "./dist/vitest/index.d.ts",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@internal/eslint-config": "workspace:*",
    "@internal/prettier-config": "workspace:*",
    "@internal/tsconfig": "workspace:*",
    "@pixpilot/dev-config": "catalog:dev",
    "@testing-library/jest-dom": "catalog:dev",
    "@vitejs/plugin-react": "catalog:dev",
    "@vitest/coverage-v8": "catalog:dev",
    "eslint": "catalog:dev",
    "jsdom": "catalog:dev",
    "prettier": "catalog:dev",
    "typescript-eslint": "catalog:dev",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "catalog:dev"
  },
  "prettier": "@internal/prettier-config"
}
