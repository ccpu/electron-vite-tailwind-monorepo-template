{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@app/preload": ["../preload"],
      "@app/renderer": ["../renderer"]
    },
    "types": ["node"],
    "strict": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
