{
  "name": "@app/main",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**",
    "package.json"
  ],
  "scripts": {
    "build": "vite build",
    "clean:all": "git clean -xdf .cache .turbo node_modules dist",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@app/preload": "workspace:*",
    "@app/renderer": "workspace:*",
    "@internal/ipc": "workspace:*",
    "electron-window-toolkit": "^1.3.0"
  },
  "devDependencies": {
    "@internal/eslint-config": "workspace:*",
    "@internal/prettier-config": "workspace:*",
    "@internal/tsconfig": "workspace:*",
    "@internal/vitest-config": "workspace:*",
    "electron": "catalog:dev",
    "electron-devtools-installer": "4.0.0",
    "electron-vite-toolkit": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "catalog:dev"
  },
  "prettier": "@internal/prettier-config"
}
